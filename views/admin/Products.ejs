<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
</head>
<body>
     <main>
        <%-include("Navbar.ejs")%>
        

        <div class="container">
            <form action="/admin/add_products" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Add Product Form</h2>
                    </div>

                    <div class="col-md-6 mt-3">
                        <label>Enter Product Name</label>
                        <input type="text" class="form-control" name="product_name" placeholder="Enter Product Name"/>
                    </div>

                    <div class="col-md-6 mt-3">
                        <label>Enter Product Price</label>
                        <input type="number" class="form-control" name="product_price" placeholder="Enter Product Price"/>
                    </div>

                    <div class="col-md-6 mt-3">
                        <label class="label"> Product Purchase Price</label>
                        <input type="number" name="product_purchase_price" class="form-control" placeholder="Enter Product Purchase Price" required>
                    </div>

                    <div class="col-md-12 mt-3">
                        <label>Enter Product Details</label>
                        <textarea class="form-control" name="product_details" rows="3" placeholder="Enter Product Details"></textarea>
                    </div>

                    <!-- Product Image 1 -->
                    <div class="col-md-6 mt-3">
                        <label class="label">Upload Product Image 1</label>
                        <input type="file" name="product_image1" class="form-control" required>
                    </div>

                    <!-- Product Image 2 -->
                    <div class="col-md-6 mt-3">
                        <label class="label">Upload Product Image 2</label>
                        <input type="file" name="product_image2" class="form-control">
                    </div>

                    <!-- Product Image 3 -->
                    <div class="col-md-6 mt-3">
                        <label class="label">Upload Product Image 3</label>
                        <input type="file" name="product_image3" class="form-control">
                    </div>

                    <!-- Product Image 4 -->
                    <div class="col-md-6 mt-3">
                        <label class="label">Upload Product Image 4</label>
                        <input type="file" name="product_image4" class="form-control">
                    </div>

                    <div class="col-md-12 mt-3 text-center">
                        <button class="btn btn-primary">Save</button>
                    </div>
                </div>
            </form>
        </div>


        <%-include("Footer.ejs")%>
     </main>
</body>
</html>