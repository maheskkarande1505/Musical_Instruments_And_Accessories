<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
</head>
<body>
     <main>
        <%-include("Navbar.ejs")%>
        

        <div class="container">
            <form action="/admin/update_product" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Edit Product Form</h2>
                        <input type="hidden" class="form-control" name="product_id"  value="<%-products.product_id%>"/>

                    </div>

                    <div class="col-md-6 mt-3">
                        <label>Enter Product Name</label>
                        <input type="text" class="form-control" name="product_name"  value="<%-products.product_name%>"/>
                    </div>

                    <div class="col-md-6 mt-3">
                        <label>Enter Product Price</label>
                        <input type="number" class="form-control" name="product_price"  value="<%-products.product_price%>"/>
                    </div>

                    <div class="col-md-6 mt-3">
                        <label class="label"> Product Purchase Price</label>
                        <input type="number" name="product_purchase_price" class="form-control"  value="<%-products.product_purchase_price%>" required>
                    </div>

                    <div class="col-md-12 mt-3">
                        <label>Enter Product Details</label>
                        <textarea class="form-control" name="product_details" rows="3" ><%-products.product_details%></textarea>
                    </div>

                    <!-- Product Image 1 -->
                    <div class="col-md-4 mt-3">
                        <label class="label">Upload Product Image 1</label>
                        <input type="file" name="product_image1" class="form-control">
                    </div>
                    <div class="col-md-2 mt-3">
                        <img src="/uploads/<%-products.product_image1%>" width="100px" height="70px"/>
                    </div>

                    <!-- Product Image 2 -->
                    <div class="col-md-4 mt-3">
                        <label class="label">Upload Product Image 2</label>
                        <input type="file" name="product_image2" class="form-control">
                    </div>
                    <div class="col-md-2 mt-3">
                        <% if (products.product_image2) { %>
                            <img src="/uploads/<%= products.product_image2 %>" width="100px" height="70px" />
                        <% } else { %>
                            <p class="mt-4">No Image</p>
                        <% } %>
                    </div>

                    <!-- Product Image 3 -->
                    <div class="col-md-4 mt-3">
                        <label class="label">Upload Product Image 3</label>
                        <input type="file" name="product_image3" class="form-control">
                    </div>
                    <div class="col-md-2 mt-3">
                        <% if (products.product_image3) { %>
                            <img src="/uploads/<%= products.product_image3 %>" width="100px" height="70px" />
                        <% } else { %>
                            <p class="mt-4">No Image</p>
                        <% } %>
                    </div>

                    <!-- Product Image 4 -->
                    <div class="col-md-4 mt-3">
                        <label class="label">Upload Product Image 4</label>
                        <input type="file" name="product_image4" class="form-control">
                    </div>
                    <div class="col-md-2 mt-3">
                        <% if (products.product_image4) { %>
                            <img src="/uploads/<%= products.product_image4 %>" width="100px" height="70px" />
                        <% } else { %>
                            <p class="mt-4">No Image</p>
                        <% } %>
                    </div>

                    <div class="col-md-12 mt-3 text-center">
                        <button class="btn btn-primary">Update</button>
                    </div>
                </div>
            </form>
        </div>


        <%-include("Footer.ejs")%>
     </main>
</body>
</html>