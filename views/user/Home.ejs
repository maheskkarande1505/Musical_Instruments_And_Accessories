<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<style>

    .testimonial-section {
        text-align: center;
        padding: 60px 20px;
    }

 

    .carousel-wrapper {
        position: relative;
        max-width: 900px;
        margin: auto;
    }

    .testimonial-card {
        background: #fff;
        color: #000;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        min-width: 280px;
        margin: 10px;
        transition: transform 0.4s ease-in-out;
    }

    .testimonial-card img {
        width: 250px;
        height: 150px;
       
    }


    .scroll-container {
        display: flex;
        overflow-x: auto;
        scroll-behavior: smooth;
        gap: 15px;
        padding: 20px 0;
    }

    .scroll-container::-webkit-scrollbar {
        display: none;
    }

    .arrow-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(255, 255, 255, 0.2);
        border: none;
        padding: 10px;
        cursor: pointer;
        border-radius: 50%;
        transition: 0.3s;
    }

    .arrow-btn:hover {
        background: rgba(255, 255, 255, 0.5);
    }

    .prev-btn {
        left: -40px;
    }

    .next-btn {
        right: -40px;
    }

</style>
<body>
    <main>
        <header>
            <%-include("Navbar.ejs")%>
        </header>

        <!-- Slider Section -->
        <section class="first_section" style="margin-top: 70px;">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12 col-sm-12 p-0" data-aos="fade-up">
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                            
                                <% slider_info.map((row, i)=>{ %>
                                <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                                    <img src="/uploads/<%-row.slider_image%>" class="d-block w-100 h-75" alt="Slider 1">
                                </div>
                                <% }) %>

                                

                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </section>

        <!-- Musical Instruments -->
         <section>
            <div class="container mt-4">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h3>Musical Instruments</h3>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-3 mt-4">
                        <div class="card">
                            <img src="https://image3.jdomni.in/banner/17032022/E6/6D/CE/97A0D6A336AF317A045419F490_1647517226170.png?output-format=webp"/>
                        </div>
                        <h4 class="text-center mt-3">Pianos</h4>
                    </div>
                    <div class="col-md-3 mt-4">
                        <div class="card">
                            <img src="https://image3.jdomni.in/banner/17032022/57/09/70/0998B576A18F2C902046C3559D_1647517232923.png?output-format=webp"/>
                            
                        </div>
                        <h4 class="text-center mt-3">Keboard instrument</h4>
                    </div>
                    <div class="col-md-3 mt-4">
                        <div class="card">
                            <img src="https://image2.jdomni.in/banner/17032022/C6/93/37/EB9155F92223612F04E00FCB60_1647517239008.png?output-format=webp"/>
                            
                        </div>
                        <h4 class="text-center mt-3">Guiters</h4>
                    </div>

                    <div class="col-md-3 mt-4">
                        <div class="card">
                            <img src="https://image3.jdomni.in/banner/17032022/0C/23/B6/CD01DED416DB4EA2A226EB7756_1647517244837.png?output-format=webp"/>
                        </div>
                        <h4 class="text-center mt-3">Drums</h4>
                    </div>

                    <div class="col-md-3 mt-4">
                        <div class="card">
                            <img src="https://image3.jdomni.in/banner/27122022/CB/3A/65/A61EB9E07ECECAA24480CFE98A_1672082569407.png?output-format=webp"/>
                        </div>
                        <h4 class="text-center mt-3">Sampler</h4>
                    </div>

                   
                </div>
            </div>
         </section>

         <!-- Latest Products -->
         <div class="py-5">
            <div class="container py-4">
              
              <div>
                <div class="row align-items-center justify-content-between mb-3">
                  <div class="col-auto">
                    <h4 class="fw-bold mb-0">Latest Products</h4>
                  </div>
                </div>
                <div class="row row-cols-xl-5 row-cols-lg-4 row-cols-md-6 row-cols-1 g-4">
                  <% product_info.map((row, i)=>{ %>
                  <div class="col">
                    <div class="card bg-transparent border-0 rounded-0 h-100 product">
                      <div class="position-relative">
                        <img src="/uploads/<%-row.product_image1%>" class="card-img-top rounded-0" width="50px" height="300px" alt="what's-new">
                        <div class="overlay position-absolute start-0 end-0 top-0 bottom-0 opacity-0 bg-dark bg-opacity-75 d-flex align-items-center h-100">
                          <div class="d-flex align-items-center gap-3 position-absolute bottom-0 w-100 p-3">
                            <a href="/product_details/<%-row.product_id%>" class="btn btn-light btn-sm rounded-0 border-2 d-flex align-items-center justify-content-between w-100" style="position: relative; z-index: 5;">
                              <i class="ri-shopping-bag-line"></i>
                              <div>View Product</div>
                              <span class="px-1"></span>
                            </a>  
                          </div>
                        </div>
                      </div>
                      <div class="card-body pb-0 px-0">
                        <h6 class="card-title text-truncate mb-1"><%-row.product_name%></h6>
                      </div>
                      <div class="card-footer bg-transparent border-0 px-0">  
                        <h6 class="mb-0">₹ <%-row.product_price%></h6>
                      </div>
                      <a href="/product_details/<%-row.product_id%>" class="stretched-link"></a>
                    </div>
                  </div>
                  <% }) %>
      
                </div>
              </div>

              
            </div>
            <div class="text-center">
                <button class="btn btn-primary">More Products</button>
            </div>
        </div>

          <section class="testimonial-section">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h3>Brands</h3>
                </div>
            </div>
       
            <div class="carousel-wrapper">
                <button class="arrow-btn prev-btn" onclick="scrollLeft()">❮</button>
    
                <div class="scroll-container" id="scroll-container">

                    <% brand_info.map((row, i)=>{ %>
                        <div class="testimonial-card">
                            <img src="/uploads/<%-row.brand_image%>" alt="<%-row.brand_name%>">
                        </div>
                    <% }) %>
    
                </div>
    
                <button class="arrow-btn next-btn" onclick="scrollRight()">❯</button>
            </div>
        </section>

        <footer>
            <%-include("Footer.ejs")%>
        </footer>
    </main>

    <!-- Brands  -->
    <script>
        let scrollContainer = document.getElementById("scroll-container");
    
        function scrollLeft() {
            scrollContainer.scrollBy({ left: -300, behavior: "smooth" });
        }
    
        function scrollRight() {
            scrollContainer.scrollBy({ left: 300, behavior: "smooth" });
        }
    
        // Auto-scroll every 3 seconds
        setInterval(() => {
            if (scrollContainer.scrollLeft + scrollContainer.clientWidth >= scrollContainer.scrollWidth) {
                scrollContainer.scrollTo({ left: 0, behavior: "smooth" });
            } else {
                scrollContainer.scrollBy({ left: 300, behavior: "smooth" });
            }
        }, 3000);
    </script>
</body>
</html>